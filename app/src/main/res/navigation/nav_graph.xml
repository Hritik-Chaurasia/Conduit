<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <fragment
        android:id="@+id/listArticlesFragment"
        android:name="com.example.conduit_kotlin_app.ui.GlobalFeedArticles.ListArticlesFragment"
        android:label="ListArticlesFragment"
        tools:layout="@layout/fragment_list_articles"
        >
        <action
            android:id="@+id/action_listArticlesFragment_to_detailArticleFragment2"
            app:destination="@id/detailArticleFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"

            />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.conduit_kotlin_app.ui.signUp.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_signup"
        >

        <action
            android:id="@+id/action_signUpFragment_to_listArticlesFragment"
            app:destination="@id/listArticlesFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@+id/loginfragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/loginfragment"
        android:name="com.example.conduit_kotlin_app.ui.login.Loginfragment"
        android:label="Loginfragment"
        tools:layout="@layout/fragment_login"
        >

        <action
            android:id="@+id/action_loginfragment_to_signUpFragment2"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/action_loginfragment_to_listArticlesFragment"
            app:destination="@id/listArticlesFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@+id/loginfragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.conduit_kotlin_app.ui.splashscreen.SplashScreenFragment"
        android:label="SplashScreenFragment"
        tools:layout="@layout/fragment_splashscreen">
        <action
            android:id="@+id/action_splashScreenFragment_to_listArticlesFragment"
            app:destination="@id/listArticlesFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@+id/splashScreenFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_splashScreenFragment_to_loginfragment"
            app:destination="@id/loginfragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@+id/splashScreenFragment"
            app:popUpToInclusive="true"

            />

    </fragment>
    <fragment
        android:id="@+id/userfeedFragment"
        android:name="com.example.conduit_kotlin_app.ui.userfeed.UserfeedFragment"
        android:label="UserfeedFragment"
        tools:layout="@layout/fragment_userfeed"
        >
        <action
            android:id="@+id/action_userfeedFragment_to_detailArticleFragment"
            app:destination="@id/detailArticleFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            />
    </fragment>
    <fragment
        android:id="@+id/myArticlesFragment"
        android:name="com.example.conduit_kotlin_app.ui.MyArticles.MyArticlesFragment"
        android:label="MyArticlesFragment"
        tools:layout="@layout/fragment_my_articles"
        >
        <action
            android:id="@+id/action_myArticlesFragment_to_postArticleFragment"
            app:destination="@id/postArticleFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            />
        <action
            android:id="@+id/action_myArticlesFragment_to_detailArticleFragment"
            app:destination="@id/detailArticleFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            />
    </fragment>
    <fragment
        android:id="@+id/postArticleFragment"
        android:name="com.example.conduit_kotlin_app.ui.postArticle.PostArticleFragment"
        android:label="PostArticleFragment"
        tools:layout="@layout/fragment_post_article"
        />
    <fragment
        android:id="@+id/detailArticleFragment"
        android:name="com.example.conduit_kotlin_app.ui.DetailArticle.DetailArticleFragment"
        android:label="DetailArticleFragment"
        tools:layout="@layout/fragment_detail_article"
        >
        <argument
            android:name="Article"
            app:argType="com.example.conduit_kotlin_app.data.Article"
            />
    </fragment>
</navigation>